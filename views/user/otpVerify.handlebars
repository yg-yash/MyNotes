<div class="row">
    <div class="col-md-6 mx-auto my-3">
        <div class="card card-body">
            <img src="/img/logo.jpg" id="logo">
            <h3 class="text-center">
                Account Login
            </h3>
            <form action="/user/otpverify" method="POST">
                <div class="form-group">
                    <p>This is the otp verification for {{email}}</p>
                    <input type="hidden" class="form-control" name="email" value="{{email}}" required>
                    <label for="OTP">OTP</label>
                    <input type="number" class="form-control" name="otp" required>
                </div>
                <button type="submit" class="btn bg-primary  btn-block">Verify OTP</button>
            </form>




        </div>
    </div>
</div>