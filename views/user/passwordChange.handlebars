{{#each errors}}
<div class="alert alert-danger my-3">{{text}}</div>

{{else}}
{{/each}}


<div class="row">
    <div class="col-md-6 mx-auto my-3">
        <div class="card card-body">
            <img src="/img/logo.jpg" id="logo">
            <h3 class="text-center">
                Change Password
            </h3>
            <form action="/user/passwordChange?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="email" value="{{email}}" required>
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label for="cpassword">Confirm Password</label>
                    <input type="password" class="form-control" name="cpassword" required>
                </div>
                <button type="submit" class="btn bg-primary  btn-block">Change Password</button>
            </form>




        </div>
    </div>
</div>